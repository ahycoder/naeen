<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextLogin" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text_login</item>
        <item name="android:textColor">#3719D4</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#3719D4</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">#3719D4</item>

    </style>
    <style name="ButtonLogin" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#3719D4</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#3719D4</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">#3719D4</item>

    </style>
    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CollapsedAppBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ef_white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="LinearLayout">
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewAddNeeds" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="cardCornerRadius">5dip</item>
        <item name="cardElevation">5dip</item>
        <item name="cardMaxElevation">5dip</item>

    </style>
    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" >
      <item name="colorControlNormal">@color/ef_white</item>
      <item name="colorControlActivated">@color/ef_white</item>
    </style>
    <!--android:layout_width="0dip"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              -->
    <style name="TextViewAddNeeds" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LinearLayoutAddNeeds" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dip</item>

    </style>
   <style parent="@android:style/Theme.Holo.Light.Dialog" name="cart_dialog">
        <item name="android:windowFrame">@null</item>
       <item name="android:windowIsFloating">true</item>
       <item name="android:windowIsTranslucent">true</item>
       <item name="android:windowNoTitle">true</item>
       <item name="android:background">@android:color/transparent</item>
       <item name="android:windowBackground">@android:color/transparent</item>
       <item name="android:backgroundDimEnabled">true</item>
       <item name="android:backgroundDimAmount">0.6</item>
   </style>

    <style name="TextViewCollapse" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/ef_white</item>
    </style>



    <!-- sweetAlertDialog -->
    <style name="comment_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <style name="dialog_btn" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/sweet_alert_dialog_cancel_btn_background</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textColor">@color/sd_button_text_color</item>
    </style>
    <style name="dialog_btn.cancel">
        <item name="android:background">@drawable/sweet_alert_dialog_cancel_btn_background</item>
        <item name="android:textColor">@color/sd_button_text_color</item>
    </style>
    <style name="dialog_btn.confirm">
        <item name="android:background">@drawable/sweet_alert_dialog_confirm_btn_background</item>
        <item name="android:textColor">@color/sd_button_text_color</item>
    </style>
    <style name="dialog_btn.warning">
        <item name="android:background">@drawable/sweet_alert_dialog_warning_btn_background</item>
        <item name="android:textColor">@color/sd_button_text_color</item>
    </style>






</resources>
