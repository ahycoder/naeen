<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@drawable/weather_widget_background"
  android:padding="5dip">

  <TextView
    android:id="@+id/txtWeatherWidgetDay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:gravity="center"
    android:text="چهارشنبه "
    android:textColor="#ffffff"
    android:textSize="12sp"/>

  <ImageView
    android:id="@+id/imgWeatherWidget"
    android:layout_width="wrap_content"
    android:layout_height="48dip"
    android:src="@drawable/weather_semi_clear_day"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="2dip"
      android:layout_weight="0.5"
      android:gravity="center"
      android:orientation="horizontal">

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWeatherWidgetTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="25"
        android:textColor="#ffffff"
        android:textSize="12sp"/>

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagejView4fd"
        android:layout_width="0dip"
        android:layout_height="16dip"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/weather_hot"
        tools:ignore="VectorDrawableCompat"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="2dip"
      android:layout_weight="0.5"
      android:gravity="center"
      android:orientation="horizontal">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageVgiew4d"
        android:layout_width="0dip"
        android:layout_height="16dip"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/weather_cold"
        tools:ignore="VectorDrawableCompat"/>

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWeatherWidgetTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="18"
        android:textColor="#ffffff"
        android:textSize="12sp"/>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>

