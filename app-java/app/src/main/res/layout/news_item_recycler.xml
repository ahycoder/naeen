<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardItemNews"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dip"
  app:cardCornerRadius="10dp"
  app:cardElevation="4dip">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="8dip">

      <ImageView
        android:id="@+id/imgItemNewsImageUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dip"
      android:orientation="vertical">

      <TextView
        android:id="@+id/txtItemNewsDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="TextView"
        android:textColor="@color/colorTextItemRecycler"
        android:textSize="10sp"/>

      <TextView
        android:id="@+id/txtItemNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:gravity="center|right"
        android:text="TextView"
        android:textColor="@color/colorTextItemRecycler"
        android:textSize="14sp"/>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/imgItemNewsSeen"
          android:layout_width="18dip"
          android:layout_height="18dip"
          android:layout_marginLeft="10dip"
          android:tint="@color/colorTextItemRecycler"
          app:srcCompat="@drawable/ic_item_news_seen"
          tools:ignore="VectorDrawableCompat"/>

        <TextView
          android:id="@+id/txtItemNewsNumbersSeen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dip"
          android:layout_marginRight="20dip"
          android:text="10"
          android:textColor="@color/colorTextItemRecycler"/>


        <ImageView
          android:id="@+id/imgItemNewsBookMark"
          android:layout_width="18dip"
          android:layout_height="18dip"
          android:tint="@color/colorTextItemRecycler"
          app:srcCompat="@drawable/ic_item_news_bookmark"
          tools:ignore="VectorDrawableCompat"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

</androidx.cardview.widget.CardView>