<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools"
 android:id="@+id/rootActivityMain"
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_height="match_parent">

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/viewPagerIntro"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="0.9"
    tools:ignore="MissingConstraints">

  </androidx.viewpager.widget.ViewPager>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_gravity="bottom"
    android:layout_weight="0.1"
    android:background="@color/colorBackGround"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/textEnterIntro"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dip"
      android:gravity="center"
      android:text="ورود به برنامه"
      android:textColor="@color/colorMain1"
      android:textSize="14sp"
      android:visibility="gone"/>

    <ImageView
      android:id="@+id/imgNextIntro"
      android:layout_width="64dip"
      android:layout_height="match_parent"
      android:layout_margin="10dip"
      android:scaleType="centerCrop"
      app:srcCompat="@drawable/ic_arrow_left_black"
      tools:ignore="VectorDrawableCompat"/>

    <custom.imageSlider.PageIndicator
      android:id="@+id/indicatorIntro"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_margin="10dip"
      android:scaleType="fitXY"/>

  </LinearLayout>


</LinearLayout>