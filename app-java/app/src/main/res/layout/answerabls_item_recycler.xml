<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardItemNews"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dip"
  app:cardElevation="4dip"
  app:cardCornerRadius="10dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layItemAnswerabls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    >

    <TextView
      android:id="@+id/txtItemAnswerablsTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:layout_weight="0.5"
      android:gravity="right|center_vertical"
      android:text="TextView"
      android:textColor="@color/colorTextItemRecycler"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtItemAnswerablsName"/>

    <TextView
      android:id="@+id/txtItemAnswerablsName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_weight="0.5"
      android:gravity="right|center_vertical"
      android:text="TextView"
      android:textColor="@color/colorTextItemRecycler"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/imgItemAnswerabls"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>