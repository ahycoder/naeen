<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools"
 android:id="@+id/rootActivityMain"
  app:layout_behavior="custom.spacetablayout.SpaceTabLayoutBehavior"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

<androidx.viewpager.widget.ViewPager
  android:id="@+id/viewPagerMain"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="56dp"
  tools:ignore="MissingConstraints"/>

<custom.tablayout.MyTabLayout
  android:id="@+id/spaceTabLayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  app:layout_behavior="custom.tablayout.MyTabLayoutBehavior"
  app:number_of_tabs="five"
  app:layout_insetEdge="bottom"
  app:layout_dodgeInsetEdges="bottom"
   app:button_color="@color/colorPrimary"
  app:tab_color="@color/ef_white"
  tools:ignore="MissingConstraints"/>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>